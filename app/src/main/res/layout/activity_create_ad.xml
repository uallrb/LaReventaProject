<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harshvardhansingh.lareventaproject.CreateAdActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="POST AN ADVERTISEMENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:id="@+id/textView7" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:elevation="10dp"
                android:id="@+id/cardView2"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="20dp"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sds">


                    <TextView
                        android:text="Product name:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:id="@+id/textView10"
                        android:layout_marginLeft="39dp"

                        android:layout_marginStart="39dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText"
                        android:layout_alignBaseline="@+id/textView10"
                        android:layout_alignBottom="@+id/textView10"
                        android:layout_toRightOf="@+id/textView10"
                        android:layout_toEndOf="@+id/textView10"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:hint="name" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText2"
                        android:layout_below="@+id/textView10"
                        android:layout_alignLeft="@+id/editText"
                        android:layout_alignStart="@+id/editText"
                        android:hint="price" />

                    <TextView
                        android:text="Product price:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_marginTop="10dp"
                        android:layout_alignBaseline="@+id/editText2"
                        android:layout_alignBottom="@+id/editText2"
                        android:layout_alignLeft="@+id/textView10"
                        android:layout_alignStart="@+id/textView10" />

                    <TextView
                        android:text="Product description "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/cardView2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="98dp"
                        android:id="@+id/textView12" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText3"
                        android:hint="description"
                        android:layout_below="@+id/textView12"
                        android:layout_alignLeft="@+id/textView11"
                        android:layout_alignStart="@+id/textView11" />

                    <TextView
                        android:text="Category :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        android:layout_below="@+id/editText3"
                        android:layout_alignLeft="@+id/textView12"
                        android:layout_alignStart="@+id/textView12"
                        android:layout_marginTop="24dp" />

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView17"
                        android:layout_toRightOf="@+id/textView17"
                        android:layout_toEndOf="@+id/textView17"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:id="@+id/textView18" />

                    <Button
                        android:text="Choose "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button2"
                        android:layout_alignBaseline="@+id/textView18"
                        android:layout_alignBottom="@+id/textView18"
                        android:layout_toRightOf="@+id/editText3"
                        android:layout_toEndOf="@+id/editText3" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="51dp"
                android:id="@+id/imageView4"
                android:layout_below="@+id/cardView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Upload a pic of your product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_below="@+id/cardView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="normal|bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"
                android:id="@+id/imageButton"
                android:layout_alignTop="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:id="@+id/cardView3"


                android:layout_below="@+id/imageView4"
                android:layout_marginTop="25dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:text="Seller name:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:id="@+id/textView14"
                        android:layout_marginLeft="39dp"

                        android:layout_marginStart="39dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText4"
                        android:layout_alignBaseline="@+id/textView14"
                        android:layout_alignBottom="@+id/textView14"
                        android:layout_toRightOf="@+id/textView14"
                        android:layout_toEndOf="@+id/textView14"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:hint=" seller name" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText5"
                        android:layout_below="@+id/textView14"
                        android:layout_alignLeft ="@+id/editText4"
                        android:layout_alignStart="@+id/editText4"
                        android:hint="phone number" />

                    <TextView
                        android:text="Phone number:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:layout_alignBaseline="@+id/editText5"
                        android:layout_alignBottom="@+id/editText5"
                        android:layout_alignLeft="@+id/textView14"
                        android:layout_alignStart="@+id/textView14" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText6"
                        android:hint=""
                        android:layout_alignBaseline="@+id/textView16"
                        android:layout_alignBottom="@+id/textView16"
                        android:layout_toRightOf="@+id/textView16"
                        android:layout_toEndOf="@+id/textView16" />

                    <TextView
                        android:text="How much old is it?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:id="@+id/textView16"
                        android:layout_below="@+id/editText5"
                        android:layout_alignLeft="@+id/textView15"
                        android:layout_alignStart="@+id/textView15" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView3"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/post"
                android:layout_centerHorizontal="true"
                android:text="POST"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
